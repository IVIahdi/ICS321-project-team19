<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>

<body>
    <div class="container mt-4">
        <table class="table">
            <thead>
                <tr>
                    <th>package number</th>
                    <th>destination</th>
                    <th>category</th>
                    <th>delivery_date</th>
                    <th>status</th>
                    <th>From</th>
                    <th>To</th>
                </tr>
            </thead>
            <tbody>
                <% if(data.length){ for(var i=0; i< data.length; i++) {%>
                    <tr>
                        <td>
                            <%= data[i].package_number%>
                        </td>
                        <td>
                            <%= data[i].destination%>
                        </td>
                        <td>
                            <%= data[i].category%>
                        </td>
                        <td>
                            <%= data[i].delivery_date%>
                        </td>
                        <td>
                            <%= data[i].status%>
                        </td>
                        <td>
                            <%= data[i].from_user%>
                        </td>
                        <td>
                            <%= data[i].to_user%>
                        </td>
                        <td>
                            <a href="/admin/edit/<%=data[i].package_number%>" class="btn btn-primary btn-sm">Edit</a>
                            <a href="/admin/remove/<%=data[i].package_number%>" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                    <% } }else{ %>
                        <tr>
                            <td>No data ever existed.</td>
                        </tr>
                        <% } %>
            </tbody>
        </table>
    </div>
</body>

</html>