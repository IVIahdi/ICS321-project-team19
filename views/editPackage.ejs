<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <title></title>
</head>

<body>
    <div class="card">
        <div class="card-header">Edit</div>
        <div class="card-body">
            <form method="POST" action="/edit/<%= d.package_number %>">

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label>Package number</label>
                            <input type="number" name="package_number" id="package_number" class="form-control"
                                value="<%= d.package_number %>" />
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label>Weight</label>
                            <input type="number" name="weight" id="weight" class="form-control"
                                value="<%= d.weight %>" />
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label>Destination</label>
                            <select name="destination" id="destination" class="form-select">
                                <option value="Khobar">Khobar</option>
                                <option value="Dahran">Dahran</option>
                                <option value="Hofuf">Hofuf</option>
                                <option value="Qatif">Qatif</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label>Category</label>
                        <select name="category" id="category" class="form-control">
                            <option value="Regular">Regular</option>
                            <option value="Fragile">Fragile</option>
                            <option value="Liquid">Liquid</option>
                            <option value="Chemical">Chemical</option>
                        </select>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label>Dimensions</label>
                            <input type="text" name="dimensions" id="dimensions" class="form-control"
                                value="<%= d.dimensions %>" />
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label>Insurance_amount</label>
                            <input type="number" name="insurance_amount" id="insurance_amount" class="form-control"
                                value="<%= d.insurance_amount %>" />
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label>delivery_date</label>
                            <input type="date" name="delivery_date" id="delivery_date" class="form-control"
                                value="<%= d.delivery_date %>" />
                        </div>
                    </div>

                    <div class="mb-3">
                        <input type="submit" name="submit_button" class="btn btn-primary" value="Edit" />
                    </div>
            </form>
            <script>
                document.getElementById('category').value = "<%= d.category %>";
                document.getElementById('destination').value = "<%= d.destination %>";
                var date = new Date($('#delivery_date').val());
                document.getElementById('delivery_date').value = date.getDate();
            </script>
        </div>
    </div>
</body>

</html>